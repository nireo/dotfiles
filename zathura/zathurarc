set default-bg                "#191919"
set default-fg                "#B0B0B0"

# Status bar
set statusbar-bg               "#2F2F2F"
set statusbar-fg               "#B0B0B0"

# Input bar
set inputbar-bg                "#2F2F2F"
set inputbar-fg                "#B0B0B0"

# Notification colors
set notification-bg            "#2F2F2F"
set notification-fg            "#B0B0B0"
set notification-error-bg      "#B294BB"
set notification-error-fg      "#191919"
set notification-warning-bg    "#75A0A0" 
set notification-warning-fg    "#191919"

# Completion menu
set completion-bg              "#121212"
set completion-fg              "#B0B0B0"
set completion-group-bg        "#121212"
set completion-group-fg        "#708090"
set completion-highlight-bg    "#1A1A1A"
set completion-highlight-fg    "#8AA3C1"

# Index mode (table of contents)
set index-bg                   "#191919"
set index-fg                   "#B0B0B0"
set index-active-bg            "#2F2F2F"
set index-active-fg            "#8AA3C1"

# Highlight colors for search results
set highlight-color            "#75A0A0"
set highlight-active-color     "#B294BB"

# Recolor mode (for better readability)
set recolor                    true
set recolor-lightcolor         "#191919"  # Background when recolored
set recolor-darkcolor          "#B0B0B0"  # Text when recolored
set recolor-reverse-video      true
set recolor-keephue            true

set adjust-open                best-fit
set pages-per-row              1
set scroll-page-aware          true
set scroll-full-overlap        0.01
set scroll-step                50

set font "MesloLGS Nerd Font Mono 9"
set sandbox strict



