<?xml version="1.0"?>
<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->
<labwc_config>
  <theme>
    <name>Adwaita</name>
    <cornerRadius>4</cornerRadius>
    <font name="DejaVuSansM Nerd Font" size="10"/>
    <dropShadows>no</dropShadows>
  </theme>
  <regions>
    <region name="fullscreen" x="0%" y="0%" width="100%" height="100%"/>
  </regions>
  <!-- <windowRules> -->
  <!--   <windowRule identifier="*" serverDecoration="no" border="yes" /> -->
  <!-- </windowRules> -->
  <desktops>
    <number>4</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>One</name>
      <name>Two</name>
      <name>Three</name>
      <name>Four</name>
    </names>
    <popupTime>0</popupTime>
  </desktops>
  <keyboard>
    <default/>
    <repeatRate>50</repeatRate>
    <repeatDelay>400</repeatDelay>
    <!-- Use a different terminal emulator -->
    <keybind key="A-Return">
      <action name="Execute" command="foot"/>
    </keybind>
    <keybind key="A-p">
      <action name="Execute" command="bemenu-run"/>
    </keybind>
    <keybind key="A-h">
      <action name="SnapToEdge" direction="left"/>
    </keybind>
    <keybind key="A-l">
      <action name="SnapToEdge" direction="right"/>
    </keybind>
    <keybind key="A-k">
      <action name="SnapToRegion" region="fullscreen"/>
    </keybind>
    <keybind key="A-S-Q">
      <action name="Close"/>
    </keybind>
    <keybind key="A-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="A-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="A-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="A-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <keybind key="A-S-1">
      <action name="SendToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="A-S-2">
      <action name="SendToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="A-S-3">
      <action name="SendToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="A-S-4">
      <action name="SendToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <!--
      Remove a previously defined keybind
      A shorter alternative is <keybind key="W-F4" />
    -->
    <keybind key="W-F4">
      <action name="None"/>
    </keybind>
  </keyboard>
  <mouse>
    <default/>
  </mouse>
  <placement>
    <policy/>
  </placement>
  <libinput>
    <device>
      <naturalScroll/>
    </device>
  </libinput>
</labwc_config>
